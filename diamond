
    // ```
#include <iostream>
#include <vector>
#include <bits/stdc++.h>

    using namespace std;


    void setIO(string s) {
        ios_base::sync_with_stdio(0); cin.tie(0);
        freopen((s+".in").c_str(),"r",stdin);
        freopen((s+".out").c_str(),"w",stdout);
    }
    int main() {
        // freopen("shuffle.in", "r", stdin); freopen("shuffle.out", "w", stdout);

        ios::sync_with_stdio(false) ;
        cin.tie(nullptr) ;
        cout.tie(nullptr) ;


        setIO("diamond");


        int n ;
        int k,ans=0,t=0;
        cin >> n >>k;
        vector<int> v(n) ;
        for (int i = 0; i < n; i++) {
            cin >> v[i] ;
        }
        sort(v.begin(),v.end());
        for (int i = 0; i < n; i++) {
            ans=max(ans,t) ;
            t=0;
            for (int j = 0; j < n; j++) {
                int s=v[i];

                if(s+k>=v[j]&&s<=v[j]) {
                    t++;
                    }

            }
        }
        cout << ans ;


        return 0;
    }

    //```
