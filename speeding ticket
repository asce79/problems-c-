#include <iostream>
#include <vector>
#include <bits/stdc++.h>

using namespace std;
int main() {
    //freopen("mixmilk.in", "r", stdin); freopen("mixmilk.out", "w", stdout);

    ios::sync_with_stdio(false) ;
    cin.tie(nullptr) ;
    cout.tie(nullptr) ;

    int n,m,p=0,s,x, xx=0;
    cin>>n>>m ;
    int v[100];
    int mi[100];
    for(int i=0;i<n;i++) {
        cin>>x>>s;
        xx+=x;
        for(int j=p;j<xx;j++) {
            v[j]=s;
            p+=1;
        }
    }
    p=0;
    xx=0;
    for(int i=0;i<m;i++) {
        cin>>x>>s;
        xx+=x;
        for(int j=p;j<xx;j++) {
            mi[j]=s;
            p+=1;
            }
    }
    int ma;
    for(int i=0;i<100;i++) {
        ma=max(ma,mi[i]-v[i]);
    }
    cout<<ma;
    /*for(int i=0;i<100;i++) {
        cout<<v[i]<<" "<<i<<endl;
        cout<<mi[i]<<" "<<i<<endl;
        }*/

    return 0;
}
